<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/invest_item_margin"
        android:layout_marginRight="@dimen/invest_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/invest_name_height"
            android:gravity="center_vertical"
            android:text="保理NO.204"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/invest_top_money_textsize" />

        <include layout="@layout/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/invest_item_mid_height"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_project_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="100,000.45元"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/invest_item_mid_textsize" />

                <TextView
                    android:id="@+id/tv_project_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="预期年化: 10.5%"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/invest_item_mid_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_project_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="投资时间: 2014/10/23"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/invest_item_mid_textsize" />

                <TextView
                    android:id="@+id/tv_project_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="项目到期: 2014/12/23"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/invest_item_mid_textsize" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/line_gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/invest_name_height"
        android:background="@drawable/selector_trans_item"
        android:drawableRight="@mipmap/icon_arrow_right_large"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/invest_item_margin"
        android:paddingRight="@dimen/invest_item_margin"
        android:text="@string/investing_detail"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/invest_top_money_textsize" />

    <include layout="@layout/line_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/invest_divier_height"
        android:background="@color/color_app_background" />
</LinearLayout>