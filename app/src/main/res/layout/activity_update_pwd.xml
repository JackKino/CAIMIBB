<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_update_pwd_margin_top" />

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recharge_item_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/recharge_r_l_margin"
        android:paddingRight="@dimen/recharge_r_l_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/user_info_old_pwd"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/recharge_textsize" />

        <com.cmbb.app.views.widget.EditLayout
            android:id="@+id/old_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></com.cmbb.app.views.widget.EditLayout>
    </LinearLayout>

    <include layout="@layout/line_gray" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_update_pwd_margin_top2" />

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recharge_item_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/recharge_r_l_margin"
        android:paddingRight="@dimen/recharge_r_l_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/user_info_new_pwd"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/recharge_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.cmbb.app.views.widget.EditLayout
                android:id="@+id/new_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.cmbb.app.views.widget.EditLayout>

            <ImageView
                android:id="@+id/hide_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/login_logo_padding"
                android:paddingRight="@dimen/login_logo_padding"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_pwd_show" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recharge_r_l_margin"
        android:paddingRight="@dimen/recharge_r_l_margin">

        <include layout="@layout/line_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recharge_item_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/recharge_r_l_margin"
        android:paddingRight="@dimen/recharge_r_l_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/user_info_re_new_pwd"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/recharge_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.cmbb.app.views.widget.EditLayout
                android:id="@+id/re_new_pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></com.cmbb.app.views.widget.EditLayout>

            <ImageView
                android:id="@+id/hide_re_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/login_logo_padding"
                android:paddingRight="@dimen/login_logo_padding"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_pwd_show" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_gray" />


    <Button
        android:id="@+id/update_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_marginLeft="@dimen/login_logo_padding"
        android:layout_marginRight="@dimen/login_logo_padding"
        android:layout_marginTop="@dimen/forget_pwd_step1_margin_top"
        android:background="@drawable/selector_btn_blue"
        android:text="@string/common_text_commit"
        android:textColor="@color/white"
        android:textSize="@dimen/login_btn_textsize" />

</LinearLayout>