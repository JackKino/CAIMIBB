<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/finacial_item_h"
    android:background="@color/color_app_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/finacial_child_padding_l_r"
    android:paddingRight="@dimen/finacial_child_padding_l_r">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_edit_rect"
        android:orientation="vertical"
        android:paddingLeft="@dimen/finacial_child_margin_l_r">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/finacial_title_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/btn_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/main_menu_drawable_padding"
                    android:background="@drawable/shape_red_rect"
                    android:padding="2dp"
                    android:text="@string/main_menu_recommend_1"
                    android:textColor="@color/color_ee5447"
                    android:textSize="@dimen/main_menu_recomment_btn_textsize" />

                <TextView
                    android:id="@+id/btn_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_menu_drawable_padding"
                    android:background="@drawable/shape_red_rect"
                    android:padding="2dp"
                    android:text="@string/main_menu_recommend_2"
                    android:textColor="@color/color_ee5447"
                    android:textSize="@dimen/main_menu_recomment_btn_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|top">

                <ImageView
                    android:id="@+id/project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_hot_light" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/finacial_item2_margin"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:id="@+id/c1_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/detail_title_"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/finacial_item1_textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/c1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/color_ee5447"
                        android:textSize="@dimen/finacial_item1_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/c1_value"
                        android:text="%"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/finacial_item2_textsize" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/finacial_item2_margin"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/c2_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/finacial_limit"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/finacial_item1_textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/c2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="0"
                        android:textColor="@color/color_ee5447"
                        android:textSize="@dimen/finacial_item1_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/c2_value"
                        android:text="@string/main_day"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/finacial_item2_textsize" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/finacial_item2_margin"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/c3top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/finacial_start_limit"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/finacial_item1_textsize2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/c3_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:text="0"
                        android:textColor="@color/color_ee5447"
                        android:textSize="@dimen/finacial_item1_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/c3_value"
                        android:text="@string/recharge_acount_yuan"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/finacial_item2_textsize" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.99">

                <com.cmbb.app.views.widget.CycleProgressView
                    android:id="@+id/progress"
                    android:layout_width="@dimen/finacial_progress_w_h"
                    android:layout_height="@dimen/finacial_progress_w_h"
                    android:layout_centerInParent="true"></com.cmbb.app.views.widget.CycleProgressView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>