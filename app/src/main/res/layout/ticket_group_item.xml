<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ticket_group_item_height"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ticket_group_item_margin"
        android:layout_marginRight="@dimen/ticket_group_item_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/group_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/ticket_group_item_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:src="@mipmap/ticket_group_arror_bottom" />
    </LinearLayout>

    <include layout="@layout/line_gray" />
</LinearLayout>