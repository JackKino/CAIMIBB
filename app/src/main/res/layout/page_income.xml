<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_income_h"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_f97373"
            android:textSize="@dimen/wallet_income_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/recharge_acount_yuan"
            android:textColor="@color/color_f97373"
            android:textSize="@dimen/wallet_income_yuan_textsize" />
    </LinearLayout>

    <include layout="@layout/line_gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wallet_item_margin" />

    <include layout="@layout/line_gray" />

    <LinearLayout
        android:id="@+id/user_nickname_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_item_margin2"
        android:background="@color/white"
        android:paddingLeft="@dimen/my_item_h_padding"
        android:paddingRight="@dimen/my_item_h_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/wallet_income_over"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/my_top_ticket_textsize" />

        <TextView
            android:id="@+id/tv_income_already"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_f97373"
            android:textSize="@dimen/my_item_recharge_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/recharge_acount_yuan"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/my_item_recharge_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/my_item_h_padding"
        android:paddingRight="@dimen/my_item_h_padding">

        <include layout="@layout/line_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_item_margin2"
        android:background="@color/white"
        android:paddingLeft="@dimen/my_item_h_padding"
        android:paddingRight="@dimen/my_item_h_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/wallet_income_wait"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/my_top_ticket_textsize" />

        <TextView
            android:id="@+id/tv_income_wait"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_f97373"
            android:textSize="@dimen/my_item_recharge_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/recharge_acount_yuan"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/my_item_recharge_textsize" />
    </LinearLayout>

    <include layout="@layout/line_gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wallet_item_margin2" />

    <include layout="@layout/line_gray" />

    <TextView
        android:id="@+id/income_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_item_margin2"
        android:background="@drawable/selector_default_item_white"
        android:drawableRight="@mipmap/icon_arrow_right_large"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/my_item_h_padding"
        android:paddingRight="@dimen/my_item_h_padding"
        android:text="@string/wallet_income_detail"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/my_top_ticket_textsize" />

    <include layout="@layout/line_gray" />
</LinearLayout>