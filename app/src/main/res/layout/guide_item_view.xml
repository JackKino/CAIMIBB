<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/guide_over"
        android:layout_width="@dimen/guide_over_w"
        android:layout_height="@dimen/guide_over_h"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/guide_over_margin_bottom"
        android:background="@drawable/shape_blue_rect"
        android:text="@string/common_in"
        android:textColor="@color/color_app_base_color"
        android:textSize="@dimen/guide_textsize"
        android:visibility="gone" />
</FrameLayout>