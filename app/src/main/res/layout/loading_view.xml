<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bg"
    android:gravity="center"
    android:minHeight="@dimen/common_dialog_min_h"
    android:minWidth="@dimen/common_dialog_min_w"
    android:orientation="vertical"
    android:padding="@dimen/refresh_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.cmbb.app.views.widget.LoadingAnimationView
            android:id="@+id/progress"
            android:layout_width="@dimen/loading_max_width"
            android:layout_height="@dimen/loading_max_width"
            android:layout_gravity="center"
            app:circleBorderWidth="@dimen/loading_border_w"
            app:radius="@dimen/loading_radius" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/refresh_margin"
        android:paddingRight="@dimen/refresh_margin"
        android:paddingTop="@dimen/common_loading_padding"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
        android:textColor="@color/white"
        android:textSize="@dimen/common_loading_textsize"
        android:visibility="visible" />

</LinearLayout>