<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/coupon_dialog_w"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/coupon_dialog_item_margin_left"
    android:layout_marginTop="@dimen/coupon_dialog_item_margin_left"
    android:background="@drawable/shape_white_rect"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/invest_dialog_title_h"
        android:background="@color/color_f97373"
        android:gravity="center"
        android:text="@string/common_message_title"
        android:textColor="@color/white"
        android:textSize="@dimen/invest_dialog_title_textsize" />


    <include layout="@layout/line_gray" />

    <TextView
        android:id="@+id/message_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/message_dialog_min_h"
        android:overScrollMode="never"
        android:padding="@dimen/message_dialog_padding"
        android:text="消息体"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/message_dialog_textsize" />

    <include layout="@layout/line_gray" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/invest_dialog_btn_w"
        android:layout_height="@dimen/invest_dialog_btn_h"
        android:layout_gravity="center"
        android:layout_margin="@dimen/coupon_dialog_maring_v"
        android:background="@drawable/selector_btn_blue"
        android:text="@string/common_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/invest_dialog_item1_textsize" />
</LinearLayout>