<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_top_h"
                android:layout_marginLeft="@dimen/pay_top_margin_l_r"
                android:layout_marginRight="@dimen/pay_top_margin_l_r"
                android:layout_marginTop="@dimen/pay_top_margin_top"
                android:background="@drawable/shape_dark_rect"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pay_top_view_h"
                    android:background="@color/color_999999"
                    android:drawableLeft="@mipmap/icon_circle"
                    android:drawableRight="@mipmap/icon_circle"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pay_title_padding_l_r"
                    android:paddingRight="@dimen/pay_title_padding_l_r"
                    android:singleLine="true"
                    android:text="@string/finacial_pay_p_name_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/pay_top_view_textsize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/finacial_top_padding"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_endtime_p"
                            android:drawablePadding="5dp"
                            android:text="@string/invest_end_time"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/finacial_group_textsize" />

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/finacial_group_textsize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/finacial_top_padding_top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_income_p"
                            android:drawablePadding="5dp"
                            android:text="@string/invest_end_income"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/finacial_group_textsize" />

                        <TextView
                            android:id="@+id/tv_income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/finacial_group_textsize" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_top_margin_top" />

            <include layout="@layout/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pay_top_item_margin_l_r"
                android:paddingRight="@dimen/pay_top_item_margin_l_r">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pay_item_h">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/invest_title_des"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_item_money_textsize" />

                    <TextView
                        android:id="@+id/pay_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pay_item_h">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pay_item_margin_left"
                        android:gravity="center"
                        android:text="@string/finacial_pay_p_left"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:id="@+id/coupon_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pay_item_h"
                    android:background="@drawable/selector_trans_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pay_item_margin_left"
                        android:gravity="center"
                        android:text="@string/finacial_pay_p_paper"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="0å¼ "
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />
                </LinearLayout>

                <include layout="@layout/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pay_item_h">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pay_item_margin_left"
                        android:gravity="center"
                        android:text="@string/finacial_pay_p_card"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />

                    <TextView
                        android:id="@+id/pay_money_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/pay_top_view_textsize" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/line_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_item_space_h"
                android:layout_marginLeft="@dimen/pay_top_margin_top"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="@string/finacial_pay_p_card2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/pay_item_space_textsize" />

            <include layout="@layout/line_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bank_logo"
                    android:layout_width="@dimen/pay_bank_w_h"
                    android:layout_height="@dimen/pay_bank_w_h"
                    android:layout_marginLeft="@dimen/pay_top_margin_top" />

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/recharge_item_height"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/pay_top_margin_top"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/recharge_textsize" />
            </LinearLayout>

            <include layout="@layout/line_gray" />

            <Button
                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_btn_height"
                android:layout_marginLeft="@dimen/login_logo_padding"
                android:layout_marginRight="@dimen/login_logo_padding"
                android:layout_marginTop="@dimen/forget_pwd_step1_margin_top"
                android:layout_marginBottom="@dimen/forget_pwd_step1_margin_top"
                android:background="@drawable/selector_btn_blue"
                android:text="@string/common_text_finish"
                android:textColor="@color/white"
                android:textSize="@dimen/login_btn_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/forget_safer_margin_top"
                android:drawableLeft="@mipmap/icon_safer_detail"
                android:text="@string/forget_safer_detail"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/forget_safer_des_textsize"
                android:visibility="invisible" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>