<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cmbb.app.views.xlist.XListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_app_background"
            android:divider="@android:color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"></com.cmbb.app.views.xlist.XListView>

        <Button
            android:id="@+id/active_add_to"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_item_h"
            android:layout_gravity="bottom"
            android:background="@drawable/selector_btn_blue_rect"
            android:text="@string/more_recharge_now"
            android:textColor="@color/white"
            android:textSize="@dimen/more_active_recharge_textsize" />
    </LinearLayout>
</LinearLayout>