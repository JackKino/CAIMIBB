<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_failed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">


    <TextView
        android:id="@+id/reload_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bg"
        android:drawableLeft="@mipmap/tips_error"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="@dimen/loading_failed_tip_padding"
        android:text="@string/common_loading_error"
        android:textColor="@color/white"
        android:textSize="@dimen/loading_failed_tip_textsize" />
</LinearLayout>